@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a Stylist</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)<br>

  <label for="WorkStation">Station</label>
  @Html.TextBoxFor(model => model.WorkStation)<br><br><br>

  <input type="submit" value="Add Stylist">
}