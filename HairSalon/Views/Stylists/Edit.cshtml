@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2>Edit Stylist: @Model.Name</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)<br>

  <label for="WorkStation">Station</label>
  @Html.TextBoxFor(model => model.WorkStation)<br><br>

  <br><input type="submit" value="Save" />
}