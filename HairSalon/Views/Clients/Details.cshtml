@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Client

<h2>@Model.Name</h2>

<p>Phone Number: @Html.DisplayFor(model => model.Phone)</p>
<p>Stylist: @Html.DisplayFor(model => model.Stylist.Name)</p>

<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })  |  
  @Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })  |  
  @Html.ActionLink("Back to Stylist", "Details", "Stylists", new { id = Model.Stylist.StylistId })</p>