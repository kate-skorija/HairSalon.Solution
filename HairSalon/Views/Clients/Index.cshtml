@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>All Clients</h2>

@if (Model.Count == 0)
{
  <p>No clients have been added.</p>
}

@foreach(Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | Stylist: @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new { id = client.Stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>


